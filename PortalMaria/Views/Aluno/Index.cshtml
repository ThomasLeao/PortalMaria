@model IEnumerable<Aluno>

@{
    ViewData["Title"] = "Lista de Alunos";
}

<h2 class="text-center my-4">Lista de Alunos</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <!-- Barra de Pesquisa -->
            <form method="get" class="mb-3 d-flex flex-wrap">
                <input type="text" name="search" class="form-control me-2 mb-2 mb-md-0" placeholder="Pesquisar aluno" />
                <button type="submit" style="margin-top: 8px" class="btn btn-primary">Buscar</button>
            </form>

            <!-- Botão para adicionar novo aluno -->
            <div class="mb-3 text-end">
                <a asp-action="Create" class="btn btn-success">+ Adicionar Aluno</a>
            </div>

            <!-- Tabela Responsiva -->
            <div class="table-responsive">
                <table class="table table-hover table-striped table-bordered text-center align-middle">
                    <thead class="table-primary">
                        <tr>
                            <th>Nome</th>
                            <th>Idade</th>
                            <th>Responsável</th>
                            <th>Telefone</th>
                            <th>Observação</th>
                            <th>Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var aluno in Model)
                        {
                            <tr>
                                <td>@aluno.Nome</td>
                                <td>@aluno.Idade</td>
                                <td>@aluno.Responsavel</td>
                                <td>@aluno.Telefone</td>
                                <td>@aluno.Observacao</td>
                                <td>
                                    <div class="d-flex justify-content-center flex-wrap gap-2">
                                        <a asp-action="Edit" asp-route-id="@aluno.Id" class="btn btn-warning btn-sm">
                                            ✏ Editar
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@aluno.Id" class="btn btn-danger btn-sm">
                                            ❌ Excluir
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
