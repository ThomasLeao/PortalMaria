@model Aluno

@{
    ViewData["Title"] = "Excluir Aluno";
}

<h2 class="text-center my-4">Excluir Aluno</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <p class="text-center">Tem certeza que deseja excluir o aluno <strong>@Model.Nome</strong>?</p>

            <!-- Formulário de exclusão -->
            <form asp-action="Delete" class="text-center">
                <button type="submit" class="btn btn-danger w-100 w-md-auto">Confirmar</button>
            </form>

            <!-- Botão de Cancelar -->
            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
