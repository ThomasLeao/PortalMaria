@model Aluno

@{
    ViewData["Title"] = "Editar Aluno";
}

<h2 class="text-center my-4">Editar Aluno</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <!-- Nome -->
                <div class="mb-3">
                    <label for="Nome" class="form-label">Nome:</label>
                    <input asp-for="Nome" class="form-control" required />
                </div>

                <!-- Idade -->
                <div class="mb-3">
                    <label for="Idade" class="form-label">Idade:</label>
                    <input asp-for="Idade" type="number" class="form-control" required />
                </div>

                <!-- Responsável -->
                <div class="mb-3">
                    <label for="Responsavel" class="form-label">Responsável:</label>
                    <input asp-for="Responsavel" class="form-control" />
                </div>

                <!-- Telefone -->
                <div class="mb-3">
                    <label for="Telefone" class="form-label">Telefone:</label>
                    <input asp-for="Telefone" type="number" class="form-control" required />
                </div>

                <!-- Observação -->
                <div class="mb-3">
                    <label for="Observacao" class="form-label">Observação:</label>
                    <input asp-for="Observacao" class="form-control" />
                </div>

                <!-- Botão Salvar -->
                <button type="submit" class="btn btn-success w-100 w-md-auto">Salvar</button>
            </form>

            <!-- Botão Voltar -->
            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
