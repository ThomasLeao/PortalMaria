@{
    Layout = "_Layout";
}

<!-- Tela inicial com o menu de navegação -->
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 text-center">

            <!-- Título -->
            <h2 class="mb-4">Bem-vindo ao Sistema de Gestão de Alunos!</h2>

            <!-- Descrição curta -->
            <p class="lead mb-5">Acesse as funcionalidades abaixo para gerenciar os alunos com facilidade.</p>

            <!-- Menu de navegação -->
            <div class="list-group">
                <div class="mb-3">
                    <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
                       asp-controller="Aluno" asp-action="Index">
                        <i class="bi bi-person-fill"></i> Gerenciar Alunos
                        <span class="badge bg-primary rounded-pill">Novo</span>
                    </a>
                </div>
                <div class="mb-3">
                    <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
                       asp-controller="HorarioAluno" asp-action="Index">
                        <i class="bi bi-person-fill"></i> Horários Alunos
                        <span class="badge bg-primary rounded-pill">Novo</span>
                    </a>
                </div>
                <div class="mb-3">
                    <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
                       asp-controller="DocumentoEditavel" asp-action="Index">
                        <i class="bi bi-person-fill"></i> Gerar Relatório
                        <span class="badge bg-primary rounded-pill">Novo</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
}
