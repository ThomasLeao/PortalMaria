@model IEnumerable<PortalMaria.Models.HorarioAluno>

@{
    ViewData["Title"] = "Lista Horário";
}

<h2 class="text-center my-4">Horários dos Alunos</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <!-- Barra de Pesquisa -->
            <form method="get" class="mb-3 d-flex flex-wrap">
                <input type="text" name="search" class="form-control me-2 mb-2 mb-md-0" placeholder="Pesquisar aluno" />
                <button type="submit" class="btn btn-primary mt-2">Buscar</button>
            </form>

            <!-- Tabela Responsiva -->
            <div class="table-responsive">
                <table class="table table-hover table-striped table-bordered text-center align-middle">
                    <thead class="table-primary">
                        <tr>
                            <th>Nome do Aluno</th>
                            <th>Data da Modificação</th>
                            <th>Início</th>
                            <th>Fim</th>
                            <th>Dias da Semana</th>
                            <th>Matéria</th>
                            <th>Status</th>
                            <th>Presença</th>
                            <th>Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var aluno in Model)
                        {
                            <tr>
                                <td>@aluno.NomeAluno</td>
                                <td>@(aluno.CriadoEm?.ToString("dd/MM/yyyy"))</td>
                                <td>@aluno.HorarioInicio?.ToString(@"hh\:mm")</td>
                                <td>@aluno.HorarioFim?.ToString(@"hh\:mm")</td>
                                <td>@aluno.DiaSemana</td>
                                <td>@aluno.Materias</td>
                                <td>@aluno.Status</td>
                                <td>
                                    @if (aluno.Presenca == true)
                                    {
                                        <span class="text-success">✔</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">✘</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex justify-content-center flex-wrap gap-2">
                                        <a asp-action="Edit" asp-route-id="@aluno.Id" class="btn btn-warning btn-sm">
                                            ✏ Editar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
